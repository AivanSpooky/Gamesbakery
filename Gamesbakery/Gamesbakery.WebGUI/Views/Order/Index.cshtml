@model List<Gamesbakery.Core.DTOs.Response.OrderListResponseDTO>
<h2>Мои заказы</h2>
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">@TempData["SuccessMessage"]</div>
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
@if (ViewBag.Message != null)
{
    <p>@ViewBag.Message</p>
}
else if (Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Номер заказа</th>
                <th>Дата заказа</th>
                <th>Сумма</th>
                <th>Статус</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.OrderDate.ToShortDateString()</td>
                    <td>@order.TotalAmount.ToString("C")</td>
                    <td>@(order.IsCompleted ? "Завершен" : order.IsOverdue ? "Просрочен" : "В обработке")</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@order.OrderId" class="btn btn-info btn-sm">Подробнее</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>У вас нет заказов.</p>
}
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}