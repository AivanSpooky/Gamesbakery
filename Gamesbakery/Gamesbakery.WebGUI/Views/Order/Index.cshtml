@model List<Gamesbakery.Core.DTOs.OrderDTO.OrderListDTO>

<h2>Мои заказы</h2>

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Номер заказа</th>
                <th>Дата</th>
                <th>Сумма</th>
                <th>Детали</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.Id</td>
                    <td>@order.OrderDate.ToString("dd.MM.yyyy")</td>
                    <td>@order.Price.ToString("C")</td>
                    <td><a asp-action="Details" asp-route-id="@order.Id" class="btn btn-info">Подробности</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>У вас нет заказов.</p>
}

<a asp-action="Create" class="btn btn-primary m-2">Создать заказ</a>