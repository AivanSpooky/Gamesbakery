@model Gamesbakery.Core.DTOs.Response.OrderDetailsResponseDTO
<h2>Детали заказа</h2>
<dl class="row">
    <dt class="col-sm-2">Номер заказа</dt>
    <dd class="col-sm-10">@Model.Id</dd>
    <dt class="col-sm-2">Дата</dt>
    <dd class="col-sm-10">@Model.OrderDate.ToShortDateString()</dd>
    <dt class="col-sm-2">Сумма</dt>
    <dd class="col-sm-10">@Model.TotalPrice.ToString("C")</dd>
    <dt class="col-sm-2">Статус</dt>
    <dd class="col-sm-10">@(Model.IsCompleted ? "Завершен" : "В обработке") @(Model.IsOverdue ? "(Просрочен)" : "")</dd>
</dl>
<h4>Элементы заказа</h4>
@if (Model.OrderItems.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Игра</th>
                <th>Продавец</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderItems)
            {
                <tr>
                    <td>@item.GameTitle</td>
                    <td>@item.SellerName</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Элементы заказа отсутствуют.</p>
}
<a asp-action="Index" class="btn btn-secondary">Назад</a>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}