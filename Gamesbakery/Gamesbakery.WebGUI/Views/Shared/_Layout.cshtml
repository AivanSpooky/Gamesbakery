<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Gamesbakery</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="/">Gamesbakery</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <div class="navbar-nav">
                <a class="nav-item nav-link" asp-controller="Home" asp-action="Index">Главная</a>
                <a class="nav-item nav-link" asp-controller="Game" asp-action="Index">Игры</a>
                @if (User.Identity.IsAuthenticated)
                {
                    @if (User.IsInRole("User"))
                    {
                        <a class="nav-item nav-link" asp-controller="Order" asp-action="Index">Мои заказы</a>
                        <a class="nav-item nav-link" asp-controller="User" asp-action="Profile">Профиль</a>
                    }
                    @if (User.IsInRole("Seller"))
                    {
                        <a class="nav-item nav-link" asp-controller="Seller" asp-action="Profile">Профиль продавца</a>
                    }
                    @if (User.IsInRole("Admin"))
                    {
                        <a class="nav-item nav-link" asp-controller="Seller" asp-action="Register">Зарегистрировать продавца</a>
                    }
                    <form asp-controller="Account" asp-action="Logout" method="post" class="nav-item">
                        <button type="submit" class="nav-link btn btn-link">Выйти</button>
                    </form>
                }
                else
                {
                    <a class="nav-item nav-link" asp-controller="Account" asp-action="Login">Вход</a>
                    <a class="nav-item nav-link" asp-controller="User" asp-action="Register">Регистрация</a>
                }
            </div>
        </div>
    </nav>
    <div class="container">
        @RenderBody()
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>