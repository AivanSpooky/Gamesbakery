@model Gamesbakery.WebGUI.Models.GiftIndexViewModel
<h2>Подарки</h2>
<h4>Отправленные подарки</h4>
@if (Model.SentGifts.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Получатель</th>
                <th>Дата</th>
                <th>Игра</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var gift in Model.SentGifts)
            {
                <tr>
                    <td>@gift.RecipientId</td>
                    <td>@gift.GiftDate.ToShortDateString()</td>
                    <td>@gift.GameTitle</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@gift.GiftId" class="btn btn-primary btn-sm">Детали</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Отправленных подарков нет.</p>
}
<h4>Полученные подарки</h4>
@if (Model.ReceivedGifts.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Отправитель</th>
                <th>Дата</th>
                <th>Игра</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var gift in Model.ReceivedGifts)
            {
                <tr>
                    <td>@gift.SenderId</td>
                    <td>@gift.GiftDate.ToShortDateString()</td>
                    <td>@gift.GameTitle</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@gift.GiftId" class="btn btn-primary btn-sm">Детали</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Полученных подарков нет.</p>
}
<a asp-action="Create" class="btn btn-success">Отправить подарок</a>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}