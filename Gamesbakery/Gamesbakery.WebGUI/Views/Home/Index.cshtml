@using Gamesbakery.WebGUI.Extensions
@model Gamesbakery.WebGUI.Models.HomeIndexViewModel
<h2>Добро пожаловать в Gamesbakery!</h2>
@if (User.Identity.IsAuthenticated)
{
    <p>Вы вошли как @User.Identity.Name
    <span class="badge badge-primary">
        @{
            var role = ViewContext.HttpContext.User.GetRole();
        }
        Роль: @role
    </span></p>
    <a asp-controller="User" asp-action="Profile" class="btn btn-info">Профиль</a>
    <form asp-controller="Account" asp-action="Logout" method="post" style="display:inline;">
        <button type="submit" class="btn btn-outline-danger">Выйти</button>
    </form>
}
else
{
    <div class="alert alert-info">
        <a asp-controller="Account" asp-action="Login" class="btn btn-primary">Вход</a>
        <a asp-controller="User" asp-action="Register" class="btn btn-success">Регистрация</a>
    </div>
}
<a asp-controller="Game" asp-action="Index" class="btn btn-primary m-2">Все игры</a>
<h3>Категории</h3>
@if (Model?.Categories != null)
{
    <div class="row">
        @foreach (var category in Model.Categories)
        {
            <div class="col-md-4">
                <div class="card mb-3">
                    <div class="card-body">
                        <h5 class="card-title">@category.GenreName</h5>
                        <p class="card-text">@category.Description</p>
                        <a asp-controller="Game" asp-action="Index" asp-route-genre="@category.GenreName" class="btn btn-primary">Игры</a>
                    </div>
                </div>
            </div>
        }
    </div>
}