@model List<Gamesbakery.Core.DTOs.Response.GameListResponseDTO>
<h2>Список игр</h2>
<form asp-action="Index" method="get">
    <div class="form-group">
        <label for="genre">Жанр</label>
        @{
            var categories = ViewBag.Categories as IEnumerable<Gamesbakery.Core.DTOs.Response.CategoryResponseDTO>;
        }
        <select name="genre" id="genre" class="form-control">
            <option value="">Все жанры</option>
            @if (categories != null)
            {
                @foreach (var category in categories)
                {
                    if (ViewBag.Genre != null && ViewBag.Genre.ToString() == category.GenreName)
                    {
                        <option value="@category.GenreName" selected>@category.GenreName</option>
                    }
                    else
                    {
                        <option value="@category.GenreName">@category.GenreName</option>
                    }
                }
            }
        </select>
    </div>
    <div class="form-group">
        <label for="minPrice">Минимальная цена</label>
        <input type="number" name="minPrice" id="minPrice" class="form-control" step="0.01" value="@ViewBag.MinPrice" />
    </div>
    <div class="form-group">
        <label for="maxPrice">Максимальная цена</label>
        <input type="number" name="maxPrice" id="maxPrice" class="form-control" step="0.01" value="@ViewBag.MaxPrice" />
    </div>
    <button type="submit" class="btn btn-primary">Фильтровать</button>
</form>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}

@{
    var categories = ViewBag.Categories as IEnumerable<Gamesbakery.Core.DTOs.Response.CategoryResponseDTO>;
}

<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Цена</th>
            <th>Жанр</th>
            <th>Доступно</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var game in Model)
        {
            <tr>
                <td>@game.Title</td>
                <td>@game.Price.ToString("C")</td>
                <td>Не указан</td>
                <td>@(game.IsForSale ? "Да" : "Нет")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@game.Id" class="btn btn-info btn-sm">Подробнее</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (User.IsInRole("Admin"))
{
    <a asp-action="Create" class="btn btn-success">Добавить игру</a>
}